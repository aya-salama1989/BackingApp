<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backing_widget_layout"
    android:background="#ffffff"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/appwidget_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/appwidget"
        android:layout_height="@dimen/appwidget"
        android:src="@drawable/img_placeholder"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/appwidget_img"
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        tools:text="@string/appwidget_text"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

</RelativeLayout>